<div class="container mt-4">
  <h1 class="text-center mb-4">Add a New Book</h1>

  <div class="card">
    <div class="card-body">
      <%= form_with(model: @book, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :title, class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', required: true, placeholder: 'Enter the book title' %>
        </div>

        <div class="mb-3">
          <%= form.label :author, class: 'form-label' %>
          <%= form.text_field :author, class: 'form-control', required: true, placeholder: 'Enter the author name' %>
        </div>

        <div class="mb-3">
          <%= form.label :publication_year, class: 'form-label' %>
          <%= form.number_field :publication_year, class: 'form-control', required: true, min: 1000, max: Date.today.year, placeholder: 'Enter publication year' %>
        </div>

        <div class="mb-3">
          <%= form.label :isbn, class: 'form-label' %>
          <%= form.text_field :isbn, class: 'form-control', required: true, pattern: '\d{10}(\d{3})?', title: 'Must be a 10 or 13-digit ISBN', placeholder: 'Enter ISBN' %>
        </div>

        <div class="d-grid">
          <%= form.submit 'Add Book', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
