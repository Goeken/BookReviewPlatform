<h1>Books</h1>
<%= form_with url: books_path, method: :get, local: true do |form| %>
  <%= form.text_field :search, placeholder: "Search Books" %>
  <%= form.submit 'Search' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Average Rating</th>
      <th>ISBN</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.author %></td>
        <td><%= book.average_rating || 'No ratings yet' %></td>
        <td><%= book.isbn %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @books %>
