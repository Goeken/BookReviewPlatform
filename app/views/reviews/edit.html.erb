<div class="container mt-4">
<%= render 'shared/banner', title: "Edit Review for #{@book.title}" %>

  <div class="card">
    <div class="card-body">
      <%= form_with(model: [@book, @review], local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :rating, "Rating (1-5)", class: 'form-label' %>
          <%= form.number_field :rating, class: 'form-control', min: 1, max: 5, required: true, value: @review.rating %>
        </div>
        <div class="mb-3">
          <%= form.label :content, "Review Content", class: 'form-label' %>
          <%= form.text_area :content, class: 'form-control', rows: 4, required: true %>
        </div>
        <div class="d-flex justify-content-between">
          <%= link_to 'Cancel', book_path(@book), class: 'btn btn-outline-secondary' %>
          <%= form.submit 'Update Review', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
